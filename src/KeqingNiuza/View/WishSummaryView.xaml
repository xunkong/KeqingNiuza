                                                        <TextBlock Margin="6,0,0,0" Foreground="{Binding Brush}" Text="{Binding Time}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <!--  5星记录  -->
                        <StackPanel Grid.Column="2" Margin="50,0,0,0">
