                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--  总计  -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Foreground="Gray" Text="角色祈愿" />
