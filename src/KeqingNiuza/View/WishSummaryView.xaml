                                                <ItemsPanelTemplate>
                                                    <StackPanel />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Foreground="{Binding Brush}" Text="{Binding Name}" />
                                                        <TextBlock Margin="6,0,0,0" Foreground="{Binding Brush}" Text="{Binding Time}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <!--  5星记录  -->
                        <StackPanel Grid.Column="2" Margin="50,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Foreground="Gray" Text="5星记录" />
                                <TextBlock Margin="10,0,0,0" Foreground="Gray" Text="排序：" />
                                <RadioButton Margin="0,0,10,0"
                                             Content="正序"
                                             IsChecked="{Binding DataContext.IsCorrectOrder, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Style="{StaticResource FilterRadioButton}" />
                                <RadioButton Margin="0,0,0,0"
                                             Content="倒序"
                                             IsChecked="{Binding DataContext.IsCorrectOrder, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource Boolean2BooleanReConverter}}"
                                             Style="{StaticResource FilterRadioButton}" />
                            </StackPanel>
                            <kc:ScrollViewerEx Height="100"
                                               Margin="0,10,0,0"
                                               IsInertiaEnabled="True"
                                               VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Star5List}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,0,6,0" Orientation="Horizontal">
                                                <TextBlock Foreground="{Binding Brush}" Text="{Binding Name}" />
                                                <TextBlock Foreground="{Binding Brush}" Text="[" />
                                                <TextBlock Foreground="{Binding Brush}" Text="{Binding Num}" />
                                                <TextBlock Foreground="{Binding Brush}" Text="]" />
                                                <StackPanel.ToolTip>
                                                    <TextBlock Text="{Binding Time}" />
                                                </StackPanel.ToolTip>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </kc:ScrollViewerEx>
                        </StackPanel>
                    </Grid>
                </Border>


                <!--  角色按钮  -->
                <StackPanel Margin="5,20,0,10" Orientation="Horizontal">
                    <TextBlock FontSize="24"
                               FontWeight="Bold"
                               Foreground="Gray"
                               Text="角色" />
                    <Button x:Name="Button_CharacterDetail"
                            Margin="20,0,0,0"
                            VerticalAlignment="Bottom"
                            Click="Button_Detail_Click"
                            Content="详细信息"
                            Style="{StaticResource DetailButton}"
                            Tag="Character" />
                    <TextBlock Margin="10,0,0,0"
                               VerticalAlignment="Bottom"
                               Foreground="Gray"
                               Text="排序：" />
                    <RadioButton Margin="0,0,10,0"
                                 VerticalAlignment="Bottom"
                                 Click="CharacterOrderRadioButton_Click"
                                 Content="星级"
                                 GroupName="CharacterFilterGroup"
                                 IsChecked="True"
                                 Style="{StaticResource FilterRadioButton}" />
                    <RadioButton Margin="0,0,10,0"
                                 VerticalAlignment="Bottom"
                                 Click="CharacterOrderRadioButton_Click"
                                 Content="数量"
                                 GroupName="CharacterFilterGroup"
                                 Style="{StaticResource FilterRadioButton}" />
                    <RadioButton Margin="0,0,10,0"
                                 VerticalAlignment="Bottom"
                                 Click="CharacterOrderRadioButton_Click"
                                 Content="最近获得"
                                 GroupName="CharacterFilterGroup"
                                 Style="{StaticResource FilterRadioButton}" />
                </StackPanel>


                <!--  角色列表  -->
                <ItemsControl ItemsSource="{Binding CharacterInfoList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4" MouseLeftButtonUp="Grid_MouseLeftButtonUp">
                                <Image Width="100" Style="{StaticResource RarityBackground}" />
                                <Border x:Name="ImageBorder"
                                        Width="100"
                                        Height="100"
                                        VerticalAlignment="Top"
                                        BorderThickness="0"
                                        CornerRadius="0 0 20 0">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding Thumb, Converter={StaticResource ImageConverter}}" />
                                    </Border.Background>
                                </Border>
                                <TextBlock Height="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#84603D"
                                           Text="{Binding Name}" />
                                <Border Height="20"
                                        MinWidth="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="#80000000"
                                        CornerRadius="0 4 0 4">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="White"
                                               Text="{Binding Count}" />
                                </Border>
                                <Image Width="20"
                                       Margin="2,2,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Style="{StaticResource ElementIcon}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


                <!--  武器按钮  -->
                <StackPanel Margin="5,20,0,10" Orientation="Horizontal">
                    <TextBlock FontSize="24"
                               FontWeight="Bold"
                               Foreground="Gray"
                               Text="武器" />
                    <Button x:Name="Button_WeaponDetail"
                            Margin="20,0,0,0"
                            VerticalAlignment="Bottom"
                            Click="Button_Detail_Click"
                            Content="详细信息"
                            Style="{StaticResource DetailButton}"
                            Tag="Weapon" />
                    <TextBlock Margin="10,0,0,0"
                               VerticalAlignment="Bottom"
                               Foreground="Gray"
                               Text="排序：" />
                    <RadioButton Margin="0,0,10,0"
                                 VerticalAlignment="Bottom"
                                 Click="WeaponOrderRadioButton_Click"
                                 Content="星级"
                                 GroupName="WeaponFilterGroup"
                                 IsChecked="True"
                                 Style="{StaticResource FilterRadioButton}" />
                    <RadioButton Margin="0,0,10,0"
                                 VerticalAlignment="Bottom"
                                 Click="WeaponOrderRadioButton_Click"
                                 Content="数量"
                                 GroupName="WeaponFilterGroup"
                                 Style="{StaticResource FilterRadioButton}" />
                    <RadioButton Margin="0,0,10,0"
                                 VerticalAlignment="Bottom"
                                 Click="WeaponOrderRadioButton_Click"
                                 Content="最近获得"
                                 GroupName="WeaponFilterGroup"
                                 Style="{StaticResource FilterRadioButton}" />
                </StackPanel>


                <!--  武器列表  -->
                <ItemsControl ItemsSource="{Binding WeaponInfoList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4,0,4,6" MouseLeftButtonUp="Grid_MouseLeftButtonUp">
                                <Image Width="100" Style="{StaticResource RarityBackground}" />
                                <Border x:Name="ImageBorder"
                                        Width="100"
                                        Height="100"
                                        VerticalAlignment="Top"
                                        BorderThickness="0"
                                        CornerRadius="0 0 20 0">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding Thumb, Converter={StaticResource ImageConverter}}" />
                                    </Border.Background>
                                </Border>
                                <TextBlock Height="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#84603d"
                                           Text="{Binding Name}" />
                                <Border Height="20"
                                        MinWidth="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="#80000000"
                                        CornerRadius="0 4 0 4">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="White"
                                               Text="{Binding Count}" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>

        </hc:ScrollViewer>


        <hc:LoadingCircle Name="LoadingCircle"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Foreground="Gray"
                          Visibility="{Binding WishSummary, Converter={StaticResource Object2VisibilityReConverter}}" />

        <ContentControl Content="{Binding DetailContent}" />
    </Grid>
</UserControl>
