                                                <StackPanel.ToolTip>
                                                    <TextBlock Text="{Binding Time}" />
                                                </StackPanel.ToolTip>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </kc:ScrollViewerEx>
                        </StackPanel>
                    </Grid>
